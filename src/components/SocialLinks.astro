---
import { getCollection } from "astro:content";
const socialLinks = await getCollection("socialLinks");
import { getSvgContent } from "../utils/svgLoader.js";
---

<ul class="w-full flex items-center justify-between py-6">
  {
    socialLinks.map((link) => {
      const { data } = link;
      const { url, img, title, alt, width, height } = data;

      return (
        <li>
          <a
            href={url}
            target="_blank"
            title={title}
            class="hover:scale-110 transition-transform max-sm:border max-sm:border-purple-500/10 max-sm:p-2 max-sm:rounded-lg max-sm:bg-purple-900/10 max-sm:backdrop-blur-lg flex items-center gap-2"
          >
            {img ? (
              <div set:html={getSvgContent(img)} class="inline-block" />
            ) : (
              <span class="text-2xl">ðŸ”—</span>
            )}
            <span class="text-sm font-semibold max-sm:hidden">{alt}</span>
          </a>
        </li>
      );
    })
  }
</ul>
